<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ValidationActivity"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="5dp"
        app:srcCompat="@drawable/alltimeservice"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="5dp"
        app:srcCompat="@drawable/sanitisationboy"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="5dp"
        app:srcCompat="@drawable/carwasher"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtipuserlogin"
        android:visibility="gone"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:minHeight="?android:listPreferredItemHeight">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="?android:listPreferredItemHeight"
        android:minLines="1"
        android:maxLength="10"
        android:inputType="number"
        android:hint="Mobile Number"
        android:id="@+id/et_login"
        />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:id="@+id/ll_termsnconditions"
        android:gravity="center">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/cb_terms"
            android:clickable="false"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:clickable="false"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:text="I accept the "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/tv_terms"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:gravity="start|center"
            android:text="Terms &amp; Conditions"
            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:id="@+id/card_go"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_gravity="center">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>